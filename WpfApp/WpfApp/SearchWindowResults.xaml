<Window x:Class="WpfApp.SearchWindowResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Search Results" Height="595" Width="1017.6" ResizeMode="CanMinimize">
    <Grid>
        <DataGrid x:Name="uxSearchResults" HorizontalAlignment="Left" Height="537" VerticalAlignment="Top" Width="982" MaxWidth="982" Margin="10,10,0,0">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

    </Grid>
</Window>
